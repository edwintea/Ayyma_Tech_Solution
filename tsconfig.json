{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",                     
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "declaration": true,                      
    "sourceMap": true,                        
    "noImplicitAny": true,                    
    "lib": ["ES6", "DOM"],                   
    "resolveJsonModule": true,                
    "noUnusedLocals": true,                   
    "noUnusedParameters": true,               
    "incremental": true                       
  },
  "include": ["src/**/*"],                    
  "exclude": ["node_modules"]  
}             